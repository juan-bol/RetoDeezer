<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_buscar_playlist"
        android:hint="Buscar una lista de reproducciÃ³n"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imbn_buscar" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imbn_buscar"
        android:layout_alignParentRight="true"
        android:src="@drawable/buscar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/imbn_buscar"
        android:id="@+id/layout_deezer">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lista_resultados"
            android:layout_below="@+id/imbn_buscar"
            >


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



</RelativeLayout>